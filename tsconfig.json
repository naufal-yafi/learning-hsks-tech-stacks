{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@component/*": ["./src/components/*"],
      "@button/*": ["./src/components/buttons/*"],
      "@card/*": ["./src/components/cards/*"],
      "@list/*": ["./src/components/list/*"],
      "@skeleton/*": ["./src/components/loading/*"],
      "@helper/*": ["./src/helpers/*"],
      "@hook/*": ["./src/hooks/*"],
      "@lib/*": ["./src/lib/*"],
      "@partial/*": ["./src/partials/*"],
      "@search/*": ["./src/partials/search/*"],
      "@service/*": ["./src/services/*"],
      "@style": ["./src/styles/globals.css"],
      "@type/*": ["./src/types/*"],
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
